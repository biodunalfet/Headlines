<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/article_imageView"
        tools:src="@drawable/jsplaceholder"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/greyOverlay"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:text="By Zlatan Mandela"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#cfcfcf"
            android:id="@+id/article_author_textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/article_author_textView"
            tools:text="@string/placeholder_article_title"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/article_title_textView"
            android:textStyle="bold"
            />



    </RelativeLayout>

</FrameLayout>