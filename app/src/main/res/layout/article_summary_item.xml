<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:foreground="@drawable/ripple_pale"
    android:clickable="true"
    android:id="@+id/root"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/article_imageView"
        tools:src="@drawable/jsplaceholder"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/greyOverlay"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:text="By Zlatan Mandela"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:textColor="#cfcfcf"
            android:id="@+id/article_author_textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/article_author_textView"
            tools:text="@string/placeholder_article_title"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/article_title_textView"
            android:textStyle="bold"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>